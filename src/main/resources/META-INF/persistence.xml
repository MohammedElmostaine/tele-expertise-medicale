<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="teleexpertise-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Configuration de la connexion -->
        <class>com.teleexpertise.model.User</class>
        <class>com.teleexpertise.model.Patient</class>
        <class>com.teleexpertise.model.SignesVitaux</class>
        <class>com.teleexpertise.model.Consultation</class>
        <class>com.teleexpertise.model.ActeTechnique</class>
        <class>com.teleexpertise.model.Medecin</class>
        <class>com.teleexpertise.model.Creneau</class>
        <class>com.teleexpertise.model.DemandeExpertise</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/teleexpertise"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="123456"/>

            <!-- Dialect PostgreSQL pour Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Optionnel : génération automatique des tables -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
